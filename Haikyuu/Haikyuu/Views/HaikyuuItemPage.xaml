<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Haikyuu.Views.HaikyuuItemPage"
             BackgroundColor="#313445">
    <StackLayout Margin="10" VerticalOptions="StartAndExpand">
        <Label Text="Nombre" FontSize="Large" TextColor="Orange" Margin="20"/>
        <Entry Text="{Binding Name}" TextColor="White"/>
        <Label Text="Comentario" FontSize="Large" TextColor="Orange" Margin="20"/>
        <Entry Text="{Binding Notes}" TextColor="White" HeightRequest="150"/>
        <Button Text="Save" Clicked="OnSaveClicked" BackgroundColor="Orange" TextColor="Black"/>
        <Button Text="Delete" Clicked="OnDeleteClicked" BackgroundColor="Orange" TextColor="Black"/>
        <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="Orange" TextColor="Black"/>
    </StackLayout>
</ContentPage>